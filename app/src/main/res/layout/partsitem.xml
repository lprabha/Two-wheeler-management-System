<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imgparts"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:src="@drawable/banner"/>

    <LinearLayout
        android:layout_width="259dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:orientation="vertical">


        <TextView
            android:id="@+id/partsname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:hint="parts name"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/partsprice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/partsname"
            android:layout_marginTop="20dp"
            android:hint="Price"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/partsmodel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/partsprice"
            android:hint="Model"
            android:textSize="20sp" />


        <Button
            android:id="@+id/parts_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/partsmodel"
            android:layout_marginTop="20dp"
            android:hint="More Details" />

    </LinearLayout>




</LinearLayout>